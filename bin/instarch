#!/bin/bash

sudo pacman -S rustup
rustup default stable
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ..
sudo rm -r paru
paru -S neofetch wl-clipboard foot ttf-iosevka-nerd xdg-user-dirs nwg-look polkit-kde-agent tldr github-cli arc-gtk-theme htop man-db sway swaybg wofi
xdg-user-dirs-update
git config --global user.name "Zack Waterman"
git config --global user.email "zackgwaterman@gmail.com"
git config --global init.defaultBranch main
gh auth login
cd
ln -s ~/.dotfiles/sway ~/.config
ln -s ~/.dotfiles/hypr ~/.config
ln -s ~/.dotfiles/foot ~/.config
ln -s ~/.dotfiles/nvim ~/.config
ln -s ~/.dotfiles/waybar ~/.config
sudo rm ~/.bashrc
ln -s ~/.dotfiles/.bashrc ~
mkdir ~/Pictures/wallpapers
