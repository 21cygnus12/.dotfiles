# default apps
export EDITOR="nvim"
export VISUAL="nvim"
export TERMINAL="foot"
export BROWSER="firefox"

# default folders
export XDG_CONFIG_HOME="$HOME/.config"

# PATH
export PATH="$PATH:~/.local/bin"

# zsh config
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

# manpager
export MANPAGER='nvim +Man!'
export MANWIDTH=999
